    {
      "name": "Auth - Change Password",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer <JWT_TOKEN>"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"old_password\": \"oldpass\",\n    \"new_password\": \"newpass\"\n}"
        },
        "url": {"raw": "http://127.0.0.1:5000/api/auth/change-password", "protocol": "http", "host": ["127.0.0.1"], "port": "5000", "path": ["api", "auth", "change-password"]}
      }
    },
    {
      "name": "Voice - Generate TTS",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.environment.set('audio_id', response.audio_id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{user_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"text\": \"Hello world\"\n}"
        },
        "url": {"raw": "{{base_url}}/api/voice/generate", "protocol": "http", "host": ["{{base_url}}"], "path": ["api", "voice", "generate"]}
      }
    },
    {
      "name": "Voice - Download Audio",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{user_token}}"}],
        "url": {"raw": "{{base_url}}/api/voice/download/{{audio_id}}", "protocol": "http", "host": ["{{base_url}}"], "path": ["api", "voice", "download", "{{audio_id}}"]}
      }
    },
    {
      "name": "Voice - Clone Voice",
      "request": {
        "method": "POST",
        "header": [{"key": "Authorization", "value": "Bearer <JWT_TOKEN>"}],
        "body": {"mode": "formdata","formdata": [{"key": "voice_file","type": "file","src": "path/to/voice.wav"},{"key": "voice_name","type": "text","value": "MyVoice"}]},
        "url": {"raw": "http://127.0.0.1:5000/api/voice/clone-voice", "protocol": "http", "host": ["127.0.0.1"], "port": "5000", "path": ["api", "voice", "clone-voice"]}
      }
    },
    {
