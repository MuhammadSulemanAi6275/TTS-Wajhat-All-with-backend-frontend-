        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer <JWT_TOKEN>"}],
        "url": {"raw": "http://127.0.0.1:5000/api/voice/voices?search=MyVoice", "protocol": "http", "host": ["127.0.0.1"], "port": "5000", "path": ["api", "voice", "voices"], "query": [{"key": "search", "value": "MyVoice"}]}
      }
    },
    {
